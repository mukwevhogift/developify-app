rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // KYC Documents: Users can only write to their own folder.
    // Files must be under 10MB.
    // Only admins will be able to read these files (rule not yet implemented).
    match /kyc_documents/{userId}/{allPaths=**} {
      allow read: if false; // Future: allow admin read
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 10 * 1024 * 1024;
    }

    // Property Media: Verified property owners can write to their own property folders.
    // Files must be under 10MB.
    match /property_media/{userId}/{propertyId}/{fileName} {
      allow read: if true; // Media is public once uploaded.
      allow write: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.size < 10 * 1024 * 1024;
                    // Future: check if user is a verified owner via custom claim or Firestore read
    }

    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
