rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // KYC Documents: Users can only write to their own folder.
    // Files must be under 10MB.
    // Only admins will be able to read these files (rule not yet implemented).
    match /kyc_documents/{userId}/{allPaths=**} {
      allow read: if false; // Future: allow admin read
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 10 * 1024 * 1024;
    }

    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
